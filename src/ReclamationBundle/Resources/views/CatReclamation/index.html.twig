{% extends 'index.html.twig' %}



{% block content %}



<div class="card">
    <div class="card-block">

    <div class="card-title-block">
        <h3 class="title"> liste des categories </h3>
    </div>
    <div class="container">

        <table title="categories" align="center" class="table tab-pane" >

            <form  action="{{ path('recherchecc') }}" method="post">
                <div align="center">
                    <input name="nom" type="text" class="form-control boxed" placeholder="Recherche">

                    <input type="submit"  value="chercher" class="btn btn-oval btn-primary-outline" name="keyword">
                </div>



            </form>
            <thead>
            <tr>

                <th>Id Categorie</th>

                <th>Nom Categorie </th>
                <th>Action </th>
            </tr>
            </thead>

            <tbody>
            {% for c in res %}
                    <tr>
                        <td> {{ c.id }}  </td>
                        <td> {{ c.name }}  </td>
                        <td> Aucune Sous categorie </td>
                        <td><ul>
                                <li>
                                    <a href="{{ path('categorieRec_update', { 'id': c.id }) }}"> Modifier </a>
                                </li>
                                <li>
                                    <a href="{{ path('categorieRec_delete', { 'id':  c.id  }) }}"> Supprimer</a>
                                </li>
                            </ul></td>

                        </td>
                    </tr>



            {% endfor %}
            </tbody>
        </table>
        <div align="center">
            <ul>
                <a href="{{ path('categorieRec_new')  }}">  Ajouter une nouvelle categorie </a>




            </ul>
        </div>

    </div>


    </div>

</div>
{% endblock %}
